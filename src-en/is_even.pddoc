<?xml version="1.0" encoding="utf-8"?>
<pddoc version="1.0">
    <object name="is_even">
        <title>is_even</title>
        <meta>
            <authors>
                <author>Serge Poltavsky</author>
            </authors>
            <description>checks if input number is even</description>
            <license>GPL3 or later</license>
            <library>ceammc</library>
            <category>predicates</category>
            <keywords>predicate numbers</keywords>
            <also>
                <see>is_odd</see>
            </also>
            <since>0.1</since>
        </meta>
        <inlets>
            <inlet>
                <xinfo on="int">outputs '1' if number can be divided exactly by 2, otherwise
                '0'</xinfo>
                <xinfo on="float">first value converted to integer, then the check is
                performed</xinfo>
            </inlet>
        </inlets>
        <outlets>
            <outlet>0 or 1</outlet>
            <outlet>passed even numbers</outlet>
        </outlets>
        <example>
            <pdascii>
<![CDATA[
[F]
|
[is_even     ]
|    ^|
[_]  [F]
]]>
            </pdascii>
        </example>
    </object>
</pddoc>
